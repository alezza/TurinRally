<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bckimage"
    tools:context="com.example.al.turinrally.WarningStartActivity"
    android:id="@+id/warning">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warning!"
        android:id="@+id/textView"
        android:textColor="#ff020134"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="76dp"
        android:textSize="12pt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are not in Turin. Do you want to continue?"
        android:id="@+id/textView2"
        android:textColor="#ff020134"
        android:textSize="9pt"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="52dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue Offline - Get Start Point!"
        android:id="@+id/buttonMap"
        android:background="@drawable/buttonshape"
        android:focusable="true"
        android:capitalize="words"
        android:elegantTextHeight="true"
        android:textStyle="bold|italic"
        android:onClick="startMap"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:id="@+id/button2"
        android:background="@drawable/buttonshape2"
        android:elegantTextHeight="true"
        android:textStyle="bold|italic"
        android:layout_below="@+id/buttonMap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />
</RelativeLayout>
